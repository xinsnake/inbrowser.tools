extends ../_base.pug

block content
    article
        h2 Color Picker &amp; Converter
        .center.gap
            label Pick a Color
            input(type="color" id="color-picker" value="#3498db" style="width: 150px; height: 60px; border: none; cursor: pointer;")
        .center.gap
            #color-preview(style="width: 200px; height: 100px; margin: 0 auto; border: 1px solid #ddd; border-radius: 5px; background-color: #3498db;")
        .center.gap
            table(style="margin: 0 auto; text-align: left; border-spacing: 15px;")
                tr
                    td
                        strong HEX:
                    td
                        input(type="text" id="hex" value="#3498db" style="width: 120px; padding: 5px; font-family: 'Courier New', Courier, monospace;")
                tr
                    td
                        strong RGB:
                    td
                        input(type="text" id="rgb" value="" style="width: 180px; padding: 5px; font-family: 'Courier New', Courier, monospace;")
                tr
                    td
                        strong HSL:
                    td
                        input(type="text" id="hsl" value="" style="width: 180px; padding: 5px; font-family: 'Courier New', Courier, monospace;")
        .center.gap
            p(style="font-size: 12px; color: #666;") You can edit any field to update the color
        script(src="color-converter.js?v=20251127")
